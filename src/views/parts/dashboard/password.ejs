<div class="popup pwdForm">
  <div class="popupBG">
    <div class="dashboardSpace"></div>
    <h1>Change Password</h1>
    <div class="form">
      <form action="/api/user/manage/password" method="post">
        <div class="formOption">
          <span id='label'>Password</span>
          <input type="password" name="pwdNow" required />
        </div>
        <div class="formOption">
          <span id='label'>New Password</span>
          <input type="password" name="newPwd" required />
        </div>
        <div class="formOption">
          <span id='label'>Confirm New Password</span>
          <input type="password" name="newPwdCheck" required />
        </div>
        <div class="submit">
          <input type="submit" class="formSubmit" value="Go!">
        </div>
      </form>
      <% if (error) { %>
        <a class="error"><%= error %></a>
      <% } else if (success) { %>
        <a class="success"><%= success %></a>
      <% } %>
    </div>
  </div>
  <div class="dashboardOption">
    <a class="dashboardBack" href="/dashboard">Take Me back!</a>
  </div>
</div>